<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewReportMarkValue"
            android:layout_width="70dp"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:text="@string/temp_num"

            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewReportStudentName" />


        <TextView
            android:id="@+id/textViewReportDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"

            android:text="@string/temp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewReportMarkValue"
            app:layout_constraintTop_toBottomOf="@+id/textViewReportStudentName" />

        <TextView
            android:id="@+id/textViewReportMarkNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:gravity="center|start"
            android:paddingStart="12sp"

            android:paddingEnd="12sp"
            android:text="@string/temp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewReportMarkValue"
            app:layout_constraintTop_toBottomOf="@+id/textViewReportDate"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textViewReportStudentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:text="@string/temp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>